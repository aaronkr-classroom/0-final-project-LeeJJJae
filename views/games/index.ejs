<main class="">
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="pt-5 pb-5">
      <h1>Games</h1>
      <p>Here are all our current games offerings.</p>

      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% games.forEach(game => { %>
          <tr>
            <td>
              <a href="/games/<%= game._id %>">
                <%= game.title %>
              </a>
            </td>
            <td><%= game.description %></td>
            <td>
              <a href="/games/<%= game._id %>/edit"> Edit </a>
            </td>
            <td>
              <form action="<%= `/games/${game._id}?_method=DELETE` %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this record?')">
                <button type="submit" class="btn btn-link p-0">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="mt-5 text-center">
        <a href="/games/new" class="btn btn-primary">Add New Game</a>
        <form action="/games/deleteAll?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="btn ut-red" onclick="return confirm('Are you sure you want to delete all games?')">Delete All Games</button>
        </form>
      </div>
    </div>
  </div>
</main>
